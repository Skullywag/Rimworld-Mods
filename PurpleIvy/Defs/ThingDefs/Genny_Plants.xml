<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="PlantBase" Abstract="True">
    <eType>Plant</eType>
    <category>Plant</category>
    <thingClass>Plant</thingClass>
    <altitudeLayer>LowPlant</altitudeLayer>
    <useStandardHealth>True</useStandardHealth>
    <statBases>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Rare</tickerType>
    <selectable>False</selectable>
    <neverMultiSelect>True</neverMultiSelect>
    <drawerType>MapMeshOnly</drawerType>
    <shaderType>CutoutPlant</shaderType>
    <plant>
      <harvestDestroys>false</harvestDestroys>
      <harvestingSound>Harvest_Standard</harvestingSound>
      <harvestFinishSound>Harvest_Standard_Finish</harvestFinishSound>
      <sowWork>150</sowWork>
      <fertilityMin>0.5</fertilityMin>
      <fertilityFactorGrowthRate>1.0</fertilityFactorGrowthRate>
      <topWindExposure>0.1</topWindExposure>
      <growthPer20kTicks>0.48</growthPer20kTicks>
      <lifeSpan>90000000000</lifeSpan>
      <growMinGlow>Overlit</growMinGlow>
      <seedShootMinGrowthPercent>0.6</seedShootMinGrowthPercent>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.00</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

  <!--===========================  PurpleIvy ==============================-->

  <ThingDef ParentName="PlantBase">
    <defName>PurpleIvy</defName>
    <label>Purple Ivy</label>
    <statBases>
      <MaxHealth>50</MaxHealth>
    </statBases>  
    <thingClass>Plant_Ivy</thingClass>    
    <description>A genetically modified version of the Earth plant species "Glechoma hederacea".</description>
    <graphicPathFolderRandom>Things/Plant/PurpleIvy</graphicPathFolderRandom>
    <selectable>true</selectable>
    <sunShadowInfo>
      <baseWidth>0.2</baseWidth>
      <baseHeight>0.2</baseHeight>
      <tallness>0.2</tallness>
    </sunShadowInfo>
    <fillPercent>0.25</fillPercent>
    <pathCost>90</pathCost>
    <plant>
      <shootsSeeds>false</shootsSeeds>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>
        <min>0.4</min>
        <max>0.6</max>
      </visualSizeRange>
      <growthPer20kTicks>2.5</growthPer20kTicks>
      <topWindExposure>0.6</topWindExposure>
      <sowableGround>false</sowableGround>
      <seedShootRadius>15</seedShootRadius>
      <lifeSpan>600000</lifeSpan>
      <fertilityFactorGrowthRate>1.5</fertilityFactorGrowthRate>
      <fertilityFactorPlantChance>1.5</fertilityFactorPlantChance>
    </plant>
  </ThingDef>

